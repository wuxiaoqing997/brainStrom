page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  padding: 0;
  display: flex;
  flex-direction: column; 
  flex-wrap: nowrap;
  justify-content: flex-start;
  background-image: url('http://oofhxj2ur.bkt.clouddn.com/59c9b7d646318_1024.jpg');
  background-position: center;
  background-origin: content-box;
  background-size: cover;
  background-repeat: no-repeat; 
}
.explain_wrap{
  margin-top: 50rpx;
  width: 90%;
  height: 60%;
  max-height: 70%;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 8rpx;
  border: 1rpx dotted #000;
}
.title_boder{
  margin-right: 20rpx;
  width: 10rpx;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}
.title{
  display: flex;
  flex-wrap: nowrap;
  margin-top: 30rpx;
  margin-right: 418rpx;
  padding-left: 0;
  width: 38%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(	87,87,87
  , 0.8);
  color: rgba(255, 255, 255, 1);
  border-radius: 0 6rpx 6rpx 0;
}
.question_wrap{
  padding-top: 80rpx;
  padding-left: 70rpx;
  height: 480rpx;
  width: 600rpx;
}
.question_name_wrap{
  display: flex;
  margin-bottom: 30rpx;
  align-items: center;
}
.question_name_label{
  font-size: 32rpx;
  width: 160rpx;
  height: 32rpx;
  line-height: 32rpx;
  flex-shrink: 0;
}
.question_name{
  font-size: 36rpx; 
  word-wrap:break-word; 
  word-break:normal;
}
.back_to_answer{
  margin-left: 480rpx;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  background-color: rgba(196, 196, 196, 0.5);
  color: rgba(255, 255, 255, 0.8);
  border-radius: 10rpx;
  text-align: center;
  border: 1rpx dotted #000;

}